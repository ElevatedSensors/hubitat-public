{
    "extends": "recommended",
    "rules": {
        "BuilderMethodWithSideEffects": {
            "enabled": false
        },
        "CompileStatic": {
            "enabled": false
        },
        "DuplicateListLiteral": {
            "enabled": false
        },
        "DuplicateMapLiteral": {
            "enabled": false
        },
        "DuplicateNumberLiteral": {
            "enabled": false
        },
        "DuplicateStringLiteral": {
            "enabled": false
        },
        "FactoryMethodName": {
            "enabled": false
        },
        "InsecureRandom": {
            "enabled": false
        },
        "LineLength": {
            "length": 240
        },
        "MethodCount": {
            "enabled": false
        },
        "UnnecessaryGetter": {
            "enabled": false
        },
        "UnnecessarySetter": {
            "enabled": false
        },
        "UnnecessaryReturnKeyword": {
            "enabled": false
        },
        "comments.ClassJavadoc": "off",
        "formatting.Indentation": {
            "spacesPerIndentLevel": 4,
            "severity": "info"
        }
    }
}